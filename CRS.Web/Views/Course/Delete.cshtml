@model CRS.Web.ViewModels.CourseViewModel

@{
    ViewBag.Title = "Course Delete";
}

<h2>Course Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseCredits)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseCredits)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.Department.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Department.DepartmentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prerequisites)
        </dt>

        <dd>
            <ul>
            @foreach(var course in Model.Prerequisites)
             {
                 <li>@course.CourseName</li>
             }
            </ul>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
