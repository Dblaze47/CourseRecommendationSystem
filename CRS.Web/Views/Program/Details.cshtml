@model CRS.Entity.Models.Program

@{
    ViewBag.Title = "Program Details";
}

<h2>Program Details</h2>

<div>
    <h4>Program</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ProgramName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgramName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>

        <dt>
            Courses
        </dt>

        <dd>
            <ul>
                @foreach (var course in Model.ProgramCourseAssociations.Select(x => x.Course))
                {
                    <li>@course.CourseName</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>