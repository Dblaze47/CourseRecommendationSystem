@model CRS.Entity.Models.FilterModel

@{
    ViewBag.Title = "Recommendation Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2>Recommendation Index</h2>

<form method="POST">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label">Number of Credits: </label>
            <input type="number" name="NumberOfCredits" required class="form-control" min="9" max="22"/>
        </div>
        <div class="form-group">
            <label class="control-label">Avoid Retakeable Subject?</label>
            <input type="checkbox" name="AvoidRetakeable" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Avoid Clash Exams?</label>
            <input type="checkbox" name="AvoidTwoExamsInADay" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Avoid 2 Exams In A Day?</label>
            <input type="checkbox" name="AvoidTwoExamsInADay" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Avoid 3 Exams In A Day?</label>
            <input type="checkbox" name="AvoidClashExams" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Get Recommendation" class="form-control" />
        </div>
    </div>
</form>
