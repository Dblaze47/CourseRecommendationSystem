@model CRS.Web.ViewModels.StudentCourseAssociationViewModel

@{
    ViewBag.Title = "Enrollment Edit";
}

<h2>Enrollment Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>StudentCourseAssociation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.StudentCourseAssociation.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.StudentCourseAssociation.StudentId, "StudentId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StudentCourseAssociation.StudentId", new SelectList(Model.Students, "Id", "Id", Model.StudentCourseAssociation.StudentId), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentCourseAssociation.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentCourseAssociation.CourseId, "Course", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StudentCourseAssociation.CourseId", new SelectList(Model.Courses, "Id", "CourseName", Model.StudentCourseAssociation.CourseId), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentCourseAssociation.CourseId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentCourseAssociation.Marks, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StudentCourseAssociation.Marks, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentCourseAssociation.Marks, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
